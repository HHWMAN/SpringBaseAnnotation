<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security.xsd">


    <beans:import resource="applicationSecurityBean.xml"></beans:import>


    <!--启动方法权限验证-->
    <global-method-security secured-annotations="enabled" pre-post-annotations="enabled" jsr250-annotations="enabled" >
        <!--定义安全切面-->
       <!-- <protect-pointcut expression="execution(* com.mycompany.*Service.*(..))"
                              access="ROLE_USER"/>-->

    </global-method-security>


    <!-- 配置不过滤的资源（静态资源及登录相关） -->
    <http pattern="/**/*.css" security="none"/>
    <http pattern="/**/*.jpg" security="none"/>
    <http pattern="/**/*.jpeg" security="none"/>
    <http pattern="/**/*.gif" security="none"/>
    <http pattern="/**/*.png" security="none"/>
    <http pattern="/**/*.jsp" security="none"/>
    <http pattern="/**/*.js" security="none"/>


    <http  use-expressions="true" auto-config="false" >
        <intercept-url pattern="/login" access="permitAll"/>
        <intercept-url pattern="/index" access="permitAll" />
        <intercept-url pattern="/js/**" access="permitAll" />
        <intercept-url pattern="/error" access="permitAll"/>
        <intercept-url pattern="/error" access="permitAll"/>
        <intercept-url pattern="/static/**" access="permitAll"/>
        <intercept-url pattern="/favicon.ico" access="permitAll"/>
       <!-- <intercept-url pattern="/**" access="hasAuthority('OP_ADMIN')"/>-->
        <intercept-url pattern="/**" access="permitAll"/>
      <!--  <intercept-url pattern="/**" access="hasRole('ADMIN')"/>-->

       <!-- <access-denied-handler />-->

        <form-login
                login-page="/login"
                authentication-failure-url="/login"
                authentication-success-forward-url="/demo"

        />

        <http-basic/>

        <csrf disabled="true"></csrf>

        <session-management invalid-session-url="/login"  session-fixation-protection="newSession">
            <concurrency-control max-sessions="1" error-if-maximum-exceeded="true"/>
        </session-management>

        <remember-me  remember-me-cookie="appCk" key="zx" token-validity-seconds="10000" />

        <logout delete-cookies="appCk"
                logout-url="/logout"
                logout-success-url="/login"/>

        <access-denied-handler error-page="/error"/>


       <!-- <custom-filter ref=""/>-->
    </http>


    <authentication-manager  erase-credentials="false" >
        <authentication-provider ref="authenticationProvider">
               <!--<password-encoder ref="passwordEncode">

               </password-encoder>-->
        </authentication-provider>
    </authentication-manager>


</beans:beans>